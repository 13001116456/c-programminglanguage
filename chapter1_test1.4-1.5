#include <stdio.h>

/*while循环方式设置温度转华氏温度--------------------c-programming1.4-1.5-----------------------------------------*/
void f_trans_c()
{
	float c,f;  //c摄氏温度,f华氏温度
	int step = 20;
	puts("       f trans to c");
	c = 0;
	while(c <= 180)
	{
		f = (9.0 / 5 ) * c + 32;
		printf("%4.0f\t%6.2f\n",c,f);
		c += step;
	}

}
/*for循环方式设置温度转华氏温度*/
void f_trans_c_for()
{
	float c,f;
	int step = 20;
	puts("       f trans to c using for");
	for(c = 300;c >=0 ;c -= 20)
	{
		f = (9.0 / 5 ) * c + 32;
		printf("%4.0f\t%6.2f\n",c,f);
	}
}
